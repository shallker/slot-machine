.slot-machine
  >.reels
    >.reel
      display inline-block
      width 100px
      height 100px
      background-repeat repeat-y
      background-position 0 0
      position relative
      overflow hidden

      &.one
        background-image url('../img/reel-01.png')

      &.two
        background-image url('../img/reel-02.png')

      &.three
        background-image url('../img/reel-03.png')

      >.shadow
        position absolute
        width 100%
        height 10px
        box-shadow 0px 0px 20px 0px #AAA

        &.top
          top -10px

        &.bottom
          bottom -10px
